pipeline {
    agent {
        label 'jenkins-agent'
    }
    stages {
        stage('Application repository') {
            steps {
                echo "Cloning application repository"
                sh 'git clone https://github.com/sheilajason/afs-labs-student.git'
            }
        }
        stage('Application docker build') {
            steps {
                echo "Building application image"
            }
        }
        stage('Database docker build') {
            steps {
                echo "Building database image"
            }
        }
        stage('Test'){
            steps {
                echo "Testing stage"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deployment stage"
            }
        }
    }
    post {
        cleanup {
            echo "Clean workspace"
            sh 'rm -rf .git ./*'
        }
    }
}
git config --global user.name "sheilajason"
git config --global user.email sheila.d.jason@outlook.com
git config credential.helper store
